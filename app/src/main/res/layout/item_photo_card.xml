<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/item_photo_card"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivUserProfile"
            android:scaleType="fitCenter"
            app:riv_corner_radius="30dp"
            app:riv_border_width="0dp"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:height="45dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:paddingTop="15dp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:id="@+id/tvUsername"
            android:layout_toEndOf="@+id/ivUserProfile"
            android:textColor="#ff0e5078" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:paddingTop="15dp"
            android:paddingStart="0dp"
            android:paddingEnd="5dp"
            android:id="@+id/tvTime"
            android:layout_alignParentEnd="true"
            android:textColor="#A4A9AD" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="#FFFFFF"
        android:layout_below="@id/topBox">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivPhoto"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes"
            android:layout_below="@id/ivPhoto"
            android:id="@+id/tvLikes"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:textColor="#ff0e5078" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:id="@+id/tvCaption"
            android:textSize="15sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:layout_below="@+id/tvLikes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:id="@+id/tvCommentOne"
            android:layout_below="@+id/tvCaption"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="5dp"
            android:paddingEnd="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:id="@+id/tvCommentTwo"
            android:layout_below="@+id/tvCommentOne"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="5dp"
            android:paddingEnd="0dp" />

    </RelativeLayout>
</RelativeLayout>